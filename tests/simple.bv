inc(a) {
	note ~ a + 1
	relate note
};

# Tests to make sure stack frames are doing their jobs

main(x) {
	y ~ inc(x)
	z ~ inc(y)
	relate z
};

ident(0) ~ 0;
ident(x) {
	x > 0
	relate ident(x - 1) + 1
};

fib(0) ~ 1;
fib(1) ~ 1;
fib(x) {
	x > 1
	relate fib(x - 1) + fib(x - 2)
};
